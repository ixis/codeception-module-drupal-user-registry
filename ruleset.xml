<?xml version="1.0"?>

<ruleset name="PSR2-Codeception">
    <description>PSR2 coding standard - tweaked for Codeception tests.</description>
    <rule ref="PSR2">
        <!-- Codeception Cest classes cannot have a namespace. -->
        <exclude name="PSR1.Classes.ClassDeclaration.MissingNamespace"/>
        <!-- Codeception setup/teardown _before() and _after() methods trigger this warning. -->
        <exclude name="PSR2.Methods.MethodDeclaration.Underscore"/>
    </rule>
</ruleset>
